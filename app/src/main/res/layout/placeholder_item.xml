<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/colorDarkGray"
    app:cardCornerRadius="13dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/editorPicture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            app:srcCompat="@drawable/ic_person_black_24dp" />

        <TextView
            android:id="@+id/line1text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/editorPicture"
            android:text="TestItem"
            android:textColor="@color/colorTextDefault"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/line2text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1text"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/editorPicture"
            android:text="Line 2"
            android:textColor="@color/colorTextDefault"
            android:textSize="15sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>